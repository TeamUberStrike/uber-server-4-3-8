<Project DefaultTargets="PublishSite" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildExtensionsPath)\MSBuildCommunityTasks\MSBuild.Community.Tasks.Targets"/>

  <PropertyGroup>
    <PublishPath>$(ArtifactDir)\Cmune.Channels.Callback</PublishPath>
  </PropertyGroup>

  <ItemGroup>
    <SiteToBuild Include="Cmune.Channels.Callback\Cmune.Channels.Callback.csproj" />
  </ItemGroup>

  <Target Name="PublishSite">
    <MSBuild Projects="@(SiteToBuild)"
             Properties="Configuration=$(Configuration);WebProjectOutputDir=..\$(PublishPath)\;OutDir=..\$(PublishPath)\bin\" />

    <Copy SourceFiles="Cmune.Channels.Callback\Web.config.external.qa;
                        Cmune.Channels.Callback\Web.config.prod;"
          DestinationFolder="$(PublishPath)" />    
  </Target>

</Project>