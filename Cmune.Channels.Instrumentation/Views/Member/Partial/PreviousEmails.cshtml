@model List<MemberPreviousEmailDisplay>

<div id="memberPreviousEmails" style="margin:45px 0 0 0;">
    <h3>
        Previous emails
    </h3>
   
    @if (Model.Count > 0)
    {
        int i = 0;
    <table class="searchResultTable" style="margin:15px 0 0 0;">
        <tr>
            <th>
                Previous email
            </th>
            <th>
                Change date
            </th>
            <th>
                IP
            </th>
        </tr>
        @foreach (var item in Model)
        {
        <tr class="@(i % 2 == 1 ? "mod" : "" )">
            <td>
                @item.PreviousEmail
            </td>
            <td>
                @item.ChangeDate.ToNiceDisplay(true)
            </td>
            <td>
                @item.Ip
            </td>
        </tr>
            i++;
        }
    </table>
    }
    else
    {
    <p style="text-align:left; margin:15px 0 0 0;">
        This member didn't change his email since we started recording data (since the 17th of June 2011)
    </p>
    }
</div>