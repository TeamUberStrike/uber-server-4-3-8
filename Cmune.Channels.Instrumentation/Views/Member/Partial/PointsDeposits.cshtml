@model List<PointDepositView>
<table class="searchResultTable">
    <tr>
        <th>
            Date
        </th>
        <th>
            Type
        </th>
        <th>
            Points
        </th>
        <th>
            Is admin action
        </th>
    </tr>
    @if (Model.Count > 0)
    {
        int i = 0;

        foreach (var item in Model)
        {
        <tr class="@(i % 2 == 1 ? "mod" : "")">
            <td>
                @item.DepositDate.ToNiceDisplay(true)
            </td>
            <td style="@(item.DepositType == PointsDepositType.Login ? "font-weight:bold;" : "")">
                @item.DepositType
            </td>
            <td>
                @item.Points
            </td>
            <td>
                @item.IsAdminAction
            </td>
        </tr>
            i++;
        }
    }
</table>
@Html.GeneratePagination((PaginationModel)ViewBag.PointsDepositsPaginationModel, "getPointsDeposits()")
@if (Model.Count == 0)
{
    <p>
        There is no points deposits for this member.</p>
}
