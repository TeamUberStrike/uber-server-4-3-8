@{var usersListToSend = (List<UserV>)ViewData["usersListToSend"];}
@if (usersListToSend.Count > 0)
{
    <div>
        <table class="searchResultTable">
            <tr>
                <th>
                </th>
                <th>
                    Login
                </th>
                <th>
                    Name
                </th>
                <th>
                    Last login
                </th>
            </tr>
            @{int i = 0;}
            @foreach (var user in usersListToSend)
            { 
                <tr class="@(i % 2 == 1 ? "mod" : "")">
                    <td>
                        <a href="@Url.Action("See", "Member")?cmid=@user.UserID.ToString()">Profile</a>
                    </td>
                    <td>
                        @user.Login
                    </td>
                    <td>
                        @user.Name
                    </td>
                    <td>
                        @user.LastAliveAck.ToNiceDisplay()
                    </td>
                </tr>
                i++;
            }
        </table>
        @Html.GeneratePagination((PaginationModel)ViewBag.PaginationModel, "searchUsers()")
    </div>
}