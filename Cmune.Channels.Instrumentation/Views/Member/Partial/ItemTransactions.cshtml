@model List<ItemTransactionView>

<table class="searchResultTable">
    <tr>
        <th>
            Date
        </th>
        <th>
            Item
        </th>
        <th>
            Duration
        </th>
        <th>
            Points
        </th>
        <th>
            Credits
        </th>
    </tr>
    @if (Model.Count > 0)
       {
            int i = 0;

            foreach (var item in Model)
            {
    <tr class="@(i % 2 == 1 ? "mod":"")">
        <td>
            @item.WithdrawalDate.ToNiceDisplay(true)
        </td>
        <td>
            @(((ItemCache) ViewBag.ItemCache).GetItemName(item.ItemId))
        </td>
        <td>
            @item.Duration
        </td>
        <td>
            @item.Points
        </td>
        <td>
            @item.Credits
        </td>      
    </tr>
                i++;
            }
       }
</table>

@Html.GeneratePagination((PaginationModel)ViewBag.ItemTransactionsPaginationModel, "getItemTransactions();")

@if (Model.Count == 0) {
    <p>There is no item transaction for this member.</p>
}

