@model Dictionary<int, int>
<form id="itemsAttributedForm" action="" method="post">
<p>
    0 means a permanent duration, items can be attributed either permanently or for
    a duration between 1 day and @ViewBag.ItemMaximumDurationInDays days.<br />
    Note that @(String.Join(", ", (List<int>)ViewBag.FirstLoadoutWeaponItemIds))
    are attributed permanently already.
</p>
<table class="searchResultTable left" style="margin: 30px 0 30px 300px; width: 200px;">
    <tr>
        <th>
            ItemId
        </th>
        <th>
            Duration
        </th>
    </tr>
    @{
        int i = 0;
        int j = 0;        
    }
    @if (Model.Count > 0)
    {
        foreach (int itemId in Model.Keys)
        {
        <tr>
            <td>@Html.TextBox(String.Format("itemId{0}", i), itemId)
            </td>
            <td>@Html.TextBox(String.Format("itemDuration{0}", i), Model[itemId])
            </td>
        </tr>
            i++;
        }
    }
    @for (; j < 7; j++)
    {
        <tr>
            <td>@Html.TextBox(String.Format("itemId{0}", i + j))
            </td>
            <td>@Html.TextBox(String.Format("itemDuration{0}", i + j))
            </td>
        </tr>
    }
</table>
<div class="left" style="margin-left: 80px; padding-top: 40px;">
    Item name: @Html.TextBox("itemName")
    <input id="itemNameButton" type="submit" onclick="getItemId(); return false;" value="Give me the ItemId" /><br />
    <span id="itemIdResultSpan" style="display: block; margin-top: 25px;"></span>
</div>
<div class="clear">
</div>
@Html.Hidden("maxIndex", (i + j).ToString())
<input id="itemsAttributedButton" type="submit" onclick="setItemsAttributed(); return false;"
    value="Edit" />
</form>
