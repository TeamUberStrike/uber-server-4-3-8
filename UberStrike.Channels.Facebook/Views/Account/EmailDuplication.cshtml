@{
    Layout = "_AccountCreation.cshtml";
    ViewBag.Title = "Account Verification";
}
<h1 style="font-size: 20px">
    Existing account detected for <span class="uberstrikeYellow">@ViewBag.Email</span>
</h1>
<br />
<br />
<p style="font-size: 16px;">
    Why has this happened ?</p>
<br />
<br />
<div style="font-size: 15px">
    <p style="color: grey;">
        The email address you use on Facebook is also the email address you use to play
        Uberstrike.
        <br />
        <br />
        Enter your UberStrike password below securely & one time only to verify that you
        own both accounts.<br />
        After that you'll be able to access the same account seamlessly across all platforms.<br />
    </p>
    <form id="linkFacebookAccountForm" method="post" action="" onsubmit="GoLinkFacebookAccount();return false;">
    <br />
    @Html.Hidden("linkingEmail", (string)ViewBag.Email)
    @Html.Hidden("linkingFacebookId", ((long)ViewBag.FacebookId).ToString())
    <br />
    @Html.Password("linkingPassword", "", new { style = "width:250px" })
    @Html.Button("validateLink", "Verify", "greenWhite", "GoLinkFacebookAccount();")
    </form>
    <br />
    <div id="linkSummaryMessage" style="height: 30px; font-style: italic">
    </div>
    Have we detected your account incorrectly ?<br />
    <span style="color: grey">Please visit our </span><a href="@CommonConfig.CmuneSupportCenterUrl"
        class="uberstrikeYellow" style="text-decoration: underline" target="_blank">support center</a>
</div>
