@{
    Layout = null;
}
@{
    var PublishVersion = System.Configuration.ConfigurationManager.AppSettings["PublishVersion"];
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml"
xml:lang="en">
<head>
    <style type="text/css">
        #confirmationFading
        {
            margin: auto;
            width: 300px;
            height: 100px;
            line-height: 100px;
            text-align: center;
            background-color: #627AAD;
            display: none;
            color: white;
            font-family: Segoe UI, Arial;
            font-size: 24px;
            position: relative;
            top: 100px;
        }
    </style>
    @Html.FacebookChannelJavaScriptFile(Url)
</head>
<body>
    <script type="text/javascript">
var invitationSent = @(((bool)ViewBag.InvitationSent).ToString().ToLower());
    </script>
    <div id="confirmationFading">
    </div>
    <script type="text/javascript">
        if (BrowserDetect.browser == "Explorer") {
            if (invitationSent == true)
                ConfirmationFading("Invitation Sent", function () { window.parent.LoadHomePage() });
            else
                window.parent.LoadHomePage()
        }
        else {
            if (invitationSent == true)
                ConfirmationFading("Invitation Sent", function () { window.parent.LoadHomePage() });
            else
                window.parent.LoadHomePage()
        }
    </script>
</body>
</html>
